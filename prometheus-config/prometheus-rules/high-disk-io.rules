ALERT HighDiskIO
  IF (  avg( irate(node_disk_io_time_ms [1m]) ) by (device,instance) > 50
  FOR 2m
  LABELS {
    severity="page"
  }
  ANNOTATIONS {
    SUMMARY = "{{$labels.instance}}: High disk IO  detected",
    DESCRIPTION = "{{$labels.instance}}: IO rate is above 50% for more than 2min (current value is: {{ $value }})"
  }
  
